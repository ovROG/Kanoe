@page "/config/vts"

<MudCard Class="mt-3">

    <MudCardHeader>
        <CardHeaderContent>
            <MudText Typo="Typo.h4"> <b>VTube Studio Config</b></MudText>
        </CardHeaderContent>
    </MudCardHeader>

    <MudCardContent>
        <Kanoe2.Shared.Components.PasswordInput Value="ConfigService.GetVTSToken()" Label="Token"
            Variant="Variant.Outlined" Margin="Margin.Dense" Class="pt-3" ReadOnly />
    </MudCardContent>
</MudCard>

@code {
    [Inject]
    public required Services.VTSService VTSService { get; set; }
    [Inject]
    public required Services.Config ConfigService { get; set; }
}